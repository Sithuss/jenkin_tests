pipeline {
    agent any
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    stages {
        stage('Build') { 
            steps {
                bat 'mvn clean install -U -DskipTests' 
            }
        }
    }
    post {
       success {
            echo "build succeeded :)"
       }
       failure {
            echo "build failed :("
       }
    }
}
